@page
@model SparkAuto.Pages.Users.IndexModel
@{
}

<form method="get" asp-page="Index">
    <div class="border backgroundWhite">

        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Customers List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info">
                    Create New customer
                </a>
            </div>
        </div>
        <br />
        <div style="height:60px;" class="container border border-secondary">
            <div class="row">
                <div class="col-11">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("SearchName", new { HtmlAttributes = new { @class = "form-comntrol", placeholder = "Name.." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("SearchPhone", new { HtmlAttributes = new { @class = "form-comntrol", placeholder = "Phone.." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("SearchEmail", new { HtmlAttributes = new { @class = "form-comntrol", placeholder = "Email.." } })
                        </div>
                    </div>
                </div>
                <div class="col-1">
                    <div class="row" style="padding-top:10px; padding-right:10px;">
                        <button type="submit" value="Search" name="submit" class="btn btn-info form-control">Search</button>
                    </div>

                </div>
            </div>
        </div>



        <br />
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Email)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.UserListVM.ApplicationUserList)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Email)
                </td>
                <td>
                    <a asp-page="../Cars/Index" asp-route-userId="@item.Id" style="text-decoration:none;">
                        <img src="~/images/Car.jpg" width="60" /> &nbsp; View Cars
                    </a>
                </td>
                <td style="width:150px;">
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-page="Edit" asp-route-id=@item.Id>
                            Edit
                        </a>
                        <a class="btn btn-danger text-white" asp-page="Delete" asp-route-id=@item.Id>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
                }
                <tr>
                    <td colspan="5" class="text-right">
                        <div page-model="@Model.UserListVM.pageinfo" asp-action="Index" page-class="btn border"
                             page-class-normal="btn btn-light" page-class-selected="btn btn-info active" class="btn-group">

                        </div>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</form> 