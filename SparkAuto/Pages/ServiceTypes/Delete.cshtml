@page
@model SparkAuto.Pages.ServiceTypes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<form method="post">

    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Delete Service Type</h2>
            </div>
        </div>

        <br />
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"> </label>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.ServiceType.Name)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"> </label>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.ServiceType.Price)
            </div>
        </div>
        <div class="form-group  row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
